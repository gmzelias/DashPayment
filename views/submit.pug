extend layout.pug

block content
    - var language = `${data.validated}`
    if language == 'false' 
        p There was an error with the data, please try again.
    else
        p This is an invoice number: #{data.InvoiceID}  
        div(style='display: -webkit-inline-box;')
            p This is the address that is about to be acredited:&nbsp 
            span#HexAddr  #{data.SimpleAddress}  
        p This is the amount: #{data.Amount}
        script(type='text/javascript').
            var cai = "#{data.RAddress}";
            var el = kjua({text: $('#HexAddr').text().trim()});
            document.querySelector('body').appendChild(el);
            $(el).attr('title', cai);
        